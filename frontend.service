[Unit]
Description=NetPulse - Frontend Service
After=network.target probe.service
StartLimitIntervalSec=0

[Service]
Type=simple
Restart=always
RestartSec=1
User=pi
Group=pi
WorkingDirectory=/opt/netpulse/app_frontend
ExecStart=/opt/netpulse/app_frontend/bin/frontend

[Install]
WantedBy=multi-user.target

