<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>NetPulse</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;500;600&display=swap" rel="stylesheet">
  <style>
    :root {
      --bg-primary: #0d1117;
      --bg-secondary: #161b22;
      --bg-tertiary: #21262d;
      --text-primary: #e6edf3;
      --text-secondary: #8b949e;
      --text-muted: #6e7681;
      --border: #30363d;
      --accent: #58a6ff;
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'JetBrains Mono', monospace;
      background: var(--bg-primary);
      color: var(--text-primary);
      min-height: 100vh;
      background-image:
        radial-gradient(ellipse at top, rgba(88, 166, 255, 0.03) 0%, transparent 50%),
        radial-gradient(ellipse at bottom right, rgba(35, 154, 59, 0.05) 0%, transparent 40%);
    }

    .container {
      max-width: 1400px;
      margin: 0 auto;
      padding: 0 20px;
    }

    header {
      background: var(--bg-secondary);
      border-bottom: 1px solid var(--border);
      padding: 12px 0;
      position: sticky;
      top: 0;
      z-index: 100;
      backdrop-filter: blur(12px);
      background: rgba(22, 27, 34, 0.85);
    }

    .header-content {
      display: flex;
      align-items: center;
      justify-content: space-between;
      flex-wrap: wrap;
      gap: 12px;
    }

    .logo {
      font-size: 14px;
      font-weight: 600;
      color: var(--text-primary);
      display: flex;
      align-items: center;
      gap: 8px;
    }

    .logo::before {
      content: '◉';
      color: #239a3b;
      animation: pulse 2s ease-in-out infinite;
    }

    @keyframes pulse {
      0%, 100% { opacity: 1; }
      50% { opacity: 0.4; }
    }

    .stats {
      display: flex;
      gap: 24px;
      flex-wrap: wrap;
      font-size: 11px;
    }

    .stat {
      display: flex;
      align-items: center;
      gap: 6px;
    }

    .stat-label {
      color: var(--text-muted);
    }

    .stat-value {
      color: var(--text-secondary);
      font-weight: 500;
    }

    .stat-icon {
      width: 8px;
      height: 8px;
      border-radius: 2px;
    }

    .stat-icon.outage { background: transparent; border: 1px solid var(--border); }
    .stat-icon.connectivity { background: #e70202; }
    .stat-icon.firmware { background: #ababab; }
    .stat-icon.weather { background: var(--accent); }

    main {
      padding: 32px 0;
    }

    .grid-container {
      background: var(--bg-secondary);
      border: 1px solid var(--border);
      border-radius: 8px;
      padding: 20px;
      overflow-x: auto;
      width: fit-content;
      max-width: 100%;
      margin: 0 auto;
    }

    .days-grid {
      display: flex;
      flex-direction: column;
      gap: 2px;
    }

    .hour-row {
      display: flex;
      align-items: center;
      gap: 8px;
    }

    .day-label {
      font-size: 9px;
      color: var(--text-secondary);
      font-weight: 500;
      min-width: 50px;
      text-align: right;
      flex-shrink: 0;
    }

    .day-label.empty {
      visibility: hidden;
    }

    .hour-label {
      font-size: 9px;
      color: var(--text-muted);
      min-width: 38px;
      text-align: right;
      flex-shrink: 0;
      font-variant-numeric: tabular-nums;
    }

    .minute-header {
      display: flex;
      align-items: center;
      gap: 8px;
      margin-bottom: 12px;
    }

    .minute-header-spacer {
      min-width: 50px;
      flex-shrink: 0;
    }

    .minute-header-hour-spacer {
      min-width: 38px;
      flex-shrink: 0;
    }

    .minute-labels {
      display: flex;
      position: relative;
      width: 100%;
    }

    .minute-label {
      position: absolute;
      font-size: 8px;
      color: var(--text-muted);
      font-variant-numeric: tabular-nums;
      transform: translateX(-50%);
    }

    .ping-grid {
      display: flex;
      flex-wrap: nowrap;
      gap: 2px;
    }

    .ping-square {
      width: 12px;
      height: 12px;
      border-radius: 2px;
      cursor: pointer;
      transition: transform 0.1s ease, box-shadow 0.1s ease;
      position: relative;
    }

    .ping-square:hover:not(.empty) {
      transform: scale(1.8);
      z-index: 10;
      box-shadow: 0 0 8px rgba(255, 255, 255, 0.3);
    }

    .ping-square:hover {
      z-index: 10;
    }

    .ping-square.empty {
      background: transparent;
      cursor: pointer;
    }

    .tooltip {
      position: fixed;
      background: var(--bg-tertiary);
      border: 1px solid var(--border);
      border-radius: 6px;
      padding: 10px 12px;
      font-size: 11px;
      line-height: 1.6;
      color: var(--text-secondary);
      pointer-events: none;
      z-index: 1000;
      white-space: pre-line;
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.4);
      display: none;
      max-width: 300px;
    }

    .tooltip.visible {
      display: block;
    }

    .legend {
      display: flex;
      gap: 16px;
      margin-top: 16px;
      flex-wrap: wrap;
      font-size: 10px;
      color: var(--text-muted);
    }

    .legend-item {
      display: flex;
      align-items: center;
      gap: 6px;
    }

    .legend-color {
      width: 12px;
      height: 12px;
      border-radius: 2px;
    }

    .empty-state {
      text-align: center;
      padding: 60px 20px;
      color: var(--text-muted);
    }

    .empty-state h2 {
      font-size: 16px;
      margin-bottom: 8px;
      color: var(--text-secondary);
    }
  </style>
</head>
<body>
  <header>
    <div class="container header-content">
      <div class="logo">NetPulse</div>
      <div class="stats">
        <div class="stat">
          <span class="stat-icon outage"></span>
          <span class="stat-label">Power outage:</span>
          <span class="stat-value"><%= time_ago(@last_power_outage) %></span>
        </div>
        <div class="stat">
          <span class="stat-icon connectivity"></span>
          <span class="stat-label">Connectivity loss:</span>
          <span class="stat-value"><%= time_ago(@last_connectivity_loss) %></span>
        </div>
        <div class="stat">
          <span class="stat-icon firmware"></span>
          <span class="stat-label">Firmware update:</span>
          <span class="stat-value"><%= time_ago(@last_firmware_update) %></span>
        </div>
        <% if @current_weather %>
        <div class="stat">
          <span class="stat-icon weather"></span>
          <span class="stat-label">Weather:</span>
          <span class="stat-value"><%= @current_weather %></span>
        </div>
        <% end %>
      </div>
    </div>
  </header>

  <main>
    <div class="container">
      <div class="grid-container">
        <div class="days-grid" id="days-grid"></div>
        <div class="legend">
          <div class="legend-item">
            <div class="legend-color" style="background: #196127"></div>
            <span>0-40ms</span>
          </div>
          <div class="legend-item">
            <div class="legend-color" style="background: #239a3b"></div>
            <span>41-80ms</span>
          </div>
          <div class="legend-item">
            <div class="legend-color" style="background: #f8c300"></div>
            <span>80ms+</span>
          </div>
          <div class="legend-item">
            <div class="legend-color" style="background: #ababab"></div>
            <span>Firmware update</span>
          </div>
          <div class="legend-item">
            <div class="legend-color" style="background: #e70202"></div>
            <span>No connectivity</span>
          </div>
          <div class="legend-item">
            <div class="legend-color" style="background: #000000"></div>
            <span>Power outage</span>
          </div>
        </div>
      </div>
    </div>
  </main>

  <div class="tooltip" id="tooltip"></div>

  <script>
    const pings = <%= @pings_json %>;

    function parseUTC(datetimeStr) {
      return new Date(datetimeStr + 'Z');
    }

    function detectFirmwareUpdate(routerState) {
      if (!routerState) return false;
      const lower = routerState.toLowerCase();
      return lower.includes('software_update') || lower.includes('updating') || lower.includes('reboot');
    }

    function getPingColor(ping) {
      if (ping.success === 0) {
        return detectFirmwareUpdate(ping.router_state) ? '#ababab' : '#e70202';
      }
      const latency = ping.dns_latency || 0;
      if (latency <= 40) return '#196127';
      if (latency <= 80) return '#239a3b';
      return '#f8c300';
    }

    function formatTooltip(ping) {
      const parts = [];
      if (ping.success === 1) {
        parts.push(`${ping.dns_latency}ms`);
      } else {
        parts.push('No connection');
      }
      if (ping.weather_temperature_celsius != null) {
        parts.push(`${Math.round(ping.weather_temperature_celsius)}°C`);
      }
      if (ping.weather_cloud_cover_percentage != null) {
        parts.push(`${ping.weather_cloud_cover_percentage}% clouds`);
      }
      if (ping.weather_wind_speed_kmh != null) {
        parts.push(`${Math.round(ping.weather_wind_speed_kmh)} km/h wind`);
      }
      const localDate = parseUTC(ping.datetime);
      const dateStr = localDate.toLocaleString();
      const dnsInfo = ping.dns_ip ? ` • DNS: ${ping.dns_ip}` : '';
      return `${dateStr}${dnsInfo}\n${parts.join(' • ')}`;
    }

    function formatDayLabel(date) {
      const today = new Date();
      today.setHours(0, 0, 0, 0);
      const yesterday = new Date(today);
      yesterday.setDate(yesterday.getDate() - 1);
      const d = new Date(date);
      d.setHours(0, 0, 0, 0);

      if (d.getTime() === today.getTime()) return 'Today';
      if (d.getTime() === yesterday.getTime()) return 'Yesterday';
      return d.toLocaleDateString(undefined, { month: 'short', day: 'numeric' });
    }

    function formatHourLabel(hour) {
      return String(hour).padStart(2, '0') + ':00';
    }

    function groupPingsByDayAndHour(pings) {
      const byDayHour = new Map();

      pings.forEach(ping => {
        const localDate = parseUTC(ping.datetime);
        const dayKey = localDate.toDateString();
        const hour = localDate.getHours();

        if (!byDayHour.has(dayKey)) {
          byDayHour.set(dayKey, new Map());
        }
        const dayMap = byDayHour.get(dayKey);
        if (!dayMap.has(hour)) {
          dayMap.set(hour, []);
        }
        dayMap.get(hour).push(ping);
      });

      // Sort days descending (most recent first)
      const sortedDays = [...byDayHour.entries()].sort((a, b) => {
        return new Date(b[0]) - new Date(a[0]);
      });

      // Sort hours descending within each day, but pings ascending within each hour
      return sortedDays.map(([day, hourMap]) => {
        const sortedHours = [...hourMap.entries()]
          .sort((a, b) => b[0] - a[0])
          .map(([hour, hourPings]) => [hour, hourPings.reverse()]);
        return [day, sortedHours];
      });
    }

    function renderGrid() {
      const container = document.getElementById('days-grid');

      if (pings.length === 0) {
        container.innerHTML = `
          <div class="empty-state">
            <h2>No ping data yet</h2>
            <p>Start the probe to begin collecting connectivity data.</p>
          </div>
        `;
        return;
      }

      const grouped = groupPingsByDayAndHour(pings);
      let html = '';

      // Add minute indicator header
      html += `<div class="minute-header">`;
      html += `<div class="minute-header-spacer"></div>`;
      html += `<div class="minute-header-hour-spacer"></div>`;
      html += `<div class="minute-labels">`;
      for (let m = 0; m < 60; m++) {
        // Position based on 12px squares + 2px gaps = 14px per minute, +6px to center on box
        const pos = m * 14 + 6;
        html += `<span class="minute-label" style="left: ${pos}px">${m}</span>`;
      }
      html += `</div></div>`;

      grouped.forEach(([day, hours]) => {
        hours.forEach(([hour, hourPings], idx) => {
          html += `<div class="hour-row">`;
          html += `<div class="day-label${idx > 0 ? ' empty' : ''}">${formatDayLabel(day)}</div>`;
          html += `<div class="hour-label">${formatHourLabel(hour)}</div>`;
          html += `<div class="ping-grid">`;

          // Create a map of minute -> ping for this hour
          const pingsByMinute = new Map();
          hourPings.forEach(ping => {
            const minute = parseUTC(ping.datetime).getMinutes();
            pingsByMinute.set(minute, ping);
          });

          // Find the last data point minute in this hour
          const lastDataPointMinute = hourPings.length > 0
            ? Math.max(...hourPings.map(p => parseUTC(p.datetime).getMinutes()))
            : -1;

          // Render all 60 minute slots
          for (let m = 0; m < 60; m++) {
            const ping = pingsByMinute.get(m);
            if (ping) {
              const color = getPingColor(ping);
              const tooltip = formatTooltip(ping).replace(/"/g, '&quot;');
              html += `<div class="ping-square" style="background-color: ${color}" data-tooltip="${tooltip}"></div>`;
            } else if (m <= lastDataPointMinute) {
              // Fill with black box before last data point (power outage)
              html += `<div class="ping-square" style="background-color: #000000" data-tooltip="Power outage"></div>`;
            } else {
              // Keep empty after last data point (might be in the future)
              html += `<div class="ping-square empty" data-tooltip="No data"></div>`;
            }
          }

          html += `</div></div>`;
        });
      });

      container.innerHTML = html;
      setupTooltips();
    }

    function setupTooltips() {
      const tooltip = document.getElementById('tooltip');
      const squares = document.querySelectorAll('.ping-square');

      squares.forEach(square => {
        square.addEventListener('mouseenter', (e) => {
          tooltip.textContent = square.getAttribute('data-tooltip');
          tooltip.classList.add('visible');
          positionTooltip(e);
        });
        square.addEventListener('mousemove', positionTooltip);
        square.addEventListener('mouseleave', () => {
          tooltip.classList.remove('visible');
        });
      });

      function positionTooltip(e) {
        const x = e.clientX + 12;
        const y = e.clientY + 12;
        const tooltipRect = tooltip.getBoundingClientRect();
        const maxX = window.innerWidth - tooltipRect.width - 12;
        const maxY = window.innerHeight - tooltipRect.height - 12;
        tooltip.style.left = Math.min(x, maxX) + 'px';
        tooltip.style.top = Math.min(y, maxY) + 'px';
      }
    }

    renderGrid();
  </script>
</body>
</html>

